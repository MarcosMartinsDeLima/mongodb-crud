<h1>Produtos</h1>
<div class="products">
    {{#each products}}
    <div class="product">
    <h3>{{this.name}}</h3>
    <img src="{{this.image}}" alt="{{this.title}}">
    <p>R${{this.price}}</p>
    <p>{{this.description}}</p>
    <div class="actions">
        <a href="/products/{{this._id}}">Ver detalhes</a>
        <a href="/products/edit/{{this._id}}">Editar</a>
    </div>
    </div>
    {{/each}}
</div>